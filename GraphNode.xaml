<UserControl x:Class="Graphs.GraphNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Graphs"
             mc:Ignorable="d" 
             Width="32" Height="32">
    <Grid>
        <Border x:Name="Border" BorderThickness="2" CornerRadius="100" Background="Black">
            <Label x:Name="IndexLabel" Foreground="White" FontWeight="Bold" Content="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14"/>
        </Border>
    </Grid>
</UserControl>
